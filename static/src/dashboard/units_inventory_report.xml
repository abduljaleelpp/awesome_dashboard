<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="awesome_dashboard.UnitsInventoryReport">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
            </t>
            <div class="container">
                <div class="row mb-2">
                    <div class="col-md-4">
                        
                        <TextFilterValue 
                            options="filtersData.projects"  
                            value="project_keys"         
                            onValueChanged="(value) => onFilterChange('selectedProject', value)" 
                        />
                    </div>

                   <!--  <div class="col-md-4">
                       
                        <TextFilterValue 
                            options="unit_types"
                            value="unittype_keys"
                            onValueChanged="(value) => onFilterChange('selectedUnitType', value)"
                        />
                    </div>

                    <div class="col-md-4">
                        
                        <TextFilterValue 
                            options="salespersons"
                            value="salespersons_keys"
                            onValueChanged="(value) => onFilterChange('selectedSalesperson', value)"
                        />
                    </div> -->
                </div>
            </div>

            <div class="d-flex flex-wrap" t-if="state.isReady">
                <t t-foreach="items" t-as="item" t-key="item.id">
                    <DashboardItem size="item.size || 1">
                        <!-- Passing filtered statistics dynamically to DashboardItem -->
                        <t t-set="itemProp" t-value="item.props ? item.props(state.statistics) : {'data': state.statistics}" />
                        <t t-component="item.Component" t-props="itemProp" />
                    </DashboardItem>
                </t>
            </div>
        </Layout>
    </t>
</templates>
